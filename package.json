{
  "name": "@kibibit/gitflow-hotfix",
  "version": "0.0.0-development",
  "private": true,
  "description": "TypeScript template action",
  "main": "lib/main.js",
  "scripts": {
    "prebuild": "rimraf dist && rimraf lib",
    "build:ts": "tsc",
    "build": "npm run build:ts && npm run lint:fix && npm run package && npm test",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "semantic-release": "cross-env HUSKY=0 semantic-release",
    "contributors:all": "cross-env HUSKY=0 node ./tools/get-all-contributors.js",
    "contributors:add": "cross-env HUSKY=0 all-contributors add",
    "contributors:generate": "cross-env HUSKY=1 all-contributors generate",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kibibit/gitflow-hotfix.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "gitflow",
    "hotfix"
  ],
  "author": "thatkookooguy <neilkalman@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-angular": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@octokit/rest": "^18.12.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.2",
    "@semantic-release/npm": "^8.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@types/node": "^16.10.5",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vercel/ncc": "^0.31.1",
    "all-contributors-cli": "^6.20.0",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "cz-conventional-changelog-emoji": "^0.1.0",
    "eslint": "^7.32.0",
    "eslint-plugin-github": "^4.3.2",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.0.5",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^1.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "js-yaml": "^4.1.0",
    "rimraf": "^3.0.2",
    "semantic-release": "^18.0.1",
    "semantic-release-cli": "^5.4.4",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-emoji"
    }
  },
  "release": {
    "branches": [
      {
        "name": "main"
      },
      {
        "name": "beta",
        "channel": "beta",
        "prerelease": "beta"
      }
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES",
              "BREAKING"
            ]
          }
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "angular",
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES",
              "BREAKING"
            ]
          },
          "writerOpts": {
            "commitsSort": [
              "subject",
              "scope"
            ]
          }
        }
      ],
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md",
          "changelogTitle": "achievibit changelog"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "dist/**/*",
            "lib/**/*"
          ]
        }
      ],
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
